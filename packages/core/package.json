{
    "name": "@mohitmishra7/never-core",
    "version": "1.0.1",
    "description": "Core engine for Never - AI constraint management",
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "scripts": {
        "build": "npm run copy-library-src && tsc --build && npm run copy-library-dist",
        "copy-library-src": "rm -rf src/bundled-library && cp -r ../library src/bundled-library",
        "copy-library-dist": "mkdir -p dist && cp -r src/bundled-library dist/bundled-library",
        "clean": "rm -rf dist src/bundled-library tsconfig.tsbuildinfo",
        "test": "vitest run",
        "lint": "tsc --noEmit"
    },
    "dependencies": {
        "fast-glob": "^3.3.3",
        "gray-matter": "^4.0.3",
        "ignore": "^6.0.2",
        "minimatch": "^9.0.5",
        "safe-regex2": "^5.0.0",
        "yaml": "^2.6.1",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@types/node": "^20.17.9",
        "typescript": "^5.6.3",
        "vitest": "^1.6.1"
    },
    "engines": {
        "node": ">=18.17.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/mohitmishra786/never.git",
        "directory": "packages/core"
    },
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "dist",
        "README.md"
    ],
    "license": "MIT"
}
