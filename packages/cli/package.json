{
    "name": "@mohitmishra7/never-cli",
    "version": "0.0.9",
    "description": "AI constraint CLI for Claude, Cursor, and more",
    "type": "module",
    "main": "./dist/index.js",
    "bin": {
        "never": "./dist/index.js"
    },
    "scripts": {
        "build": "tsc && npm run postbuild",
        "postbuild": "node -e \"const fs=require('fs');const f='dist/index.js';const c=fs.readFileSync(f,'utf8');if(!c.startsWith('#!')){fs.writeFileSync(f,'#!/usr/bin/env node\\n'+c);}\"",
        "verify-dist": "node -e \"const fs=require('fs');const f='dist/index.js';if(!fs.existsSync(f)){console.error('ERROR: dist/index.js not found');process.exit(1);}const c=fs.readFileSync(f,'utf8');if(!c.startsWith('#!/usr/bin/env node')){console.error('ERROR: shebang missing');process.exit(1);}console.log('âœ“ dist/index.js verified with shebang');\"",
        "postinstall": "node scripts/postinstall.js 2>/dev/null || true",
        "clean": "rm -rf dist",
        "start": "node dist/index.js",
        "dev": "tsx src/index.ts",
        "test": "vitest run",
        "prepublishOnly": "npm run build && npm run verify-dist"
    },
    "dependencies": {
        "@clack/prompts": "^0.7.0",
        "@mohitmishra7/never-core": "0.0.9",
        "chalk": "^5.3.0",
        "commander": "^12.1.0",
        "gray-matter": "^4.0.3",
        "minimatch": "^9.0.5",
        "simple-git": "^3.30.0",
        "yaml": "^2.6.1"
    },
    "devDependencies": {
        "@types/node": "^20.17.9",
        "tsx": "^4.19.2",
        "typescript": "^5.6.3",
        "vitest": "^1.6.1"
    },
    "files": [
        "dist",
        "scripts",
        "README.md"
    ],
    "engines": {
        "node": ">=18.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/mohitmishra786/never.git",
        "directory": "packages/cli"
    },
    "publishConfig": {
        "access": "public"
    },
    "keywords": [
        "ai",
        "claude",
        "cursor",
        "constraints",
        "never",
        "rules"
    ],
    "license": "MIT"
}