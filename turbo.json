{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [
        "**/.env*local"
    ],
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**"
            ]
        },
        "test": {
            "dependsOn": [
                "build"
            ],
            "outputs": []
        },
        "lint": {
            "outputs": []
        },
        "clean": {
            "cache": false
        }
    }
}